package loop;

import java.util.Scanner;

public class Ex06 {

	public static void main(String[] args) {
		// 입력받은 숫자들의 최대값(가장큰수)구하기
		Scanner sc = new Scanner(System.in);

		System.out.print("숫자의 갯수를 입력하여주세요: ");
		int count = sc.nextInt();

		int max = 0;
		int num = 0;
		// for문을 사용하여 숫자의 갯수만큼 입력받은후 입력한 숫자들 중에서 가장 큰 수를 구한다음
		// max변수에 저장하기
		for (int i = 1; i <= count; i++) {
			System.out.println("숫자를 입력하여주세요: ");
			num = sc.nextInt();

			if (num > max) {
				max = num;
			}

		}

		System.out.println("입력한 숫자들 중 최대값 : " + max);
	}

}
