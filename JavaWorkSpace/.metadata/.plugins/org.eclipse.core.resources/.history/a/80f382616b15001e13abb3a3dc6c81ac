package wrapper;

import java.util.Scanner;

public class Ex04 {

	public static void main(String[] args) {
		
		//문자열을 기본타입의 값으로 변환 
		
		String str = "100";
		
		int intValue = Integer.parseInt(str); //매개변수로 문자열을 받고 문자열을 기본타입의 값으로 변환해줌.
		
		System.out.println(intValue);
		
		//Scanner를 사용해서 나이를 문자열로 입력받기
		// 정수로 변환 후 20이상이면 성인입니다. 출력 
		//20살 미만이면 미성년자 입니다. 출력
		
		Scanner sc = new Scanner(System.in);
		
		System.out.println("나이를 입력하여주세요 :");
		
		String age = sc.next();
		
		int Age = Integer.parseInt(age);
		
		if(Age >= 20) {
			System.out.println("성인입니다.");
		}else {
			System.out.println("미성년자 입니다.");
		}
	}

}
