package operation;

import java.util.Scanner;

public class Ex05 {

	public static void main(String[] args) {
		
		int a,b;
		int result;
		
		Scanner sc = new Scanner(System.in);
		
		//두개의 정수를 입력받아 a,b 변수에 저장 후 사칙연산 계산후 결과값 출력하기
		System.out.println("첫번째 정수 입력 : ");
		a = sc.nextInt();
		System.out.println("두번째 정수 입력 : ");
		b = sc.nextInt();
		
		System.out.printf("a와 b의  합은 : %d + %d = %d\n", a + b);
		System.out.printf("a와 b의  차는 : %d - %d = %d\n", a - b);
		System.out.printf("a와 b의  곱은 : %d * %d = %d\n" , a * b);
		System.out.printf("a와 b의  나누기는 : %d / %d = %d\n", (float)a / b);
	}

}
