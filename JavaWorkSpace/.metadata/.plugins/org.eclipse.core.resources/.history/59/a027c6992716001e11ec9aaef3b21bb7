package string;

public class Ex06 {
	
	public static void main(String[] args) {
		
		String str = "Hello Java";
		
		//indexOf : 문자열에 지정한 문자가 처음 몇번째 있는지 반환
		
		System.out.println("indexOf: " + str.indexOf("a"));
		
		//lastIndexOf: 문자열에 지정한 문자가 마지막 몇번쨰 있는지 반환
		
		System.out.println("indexOf: " + str.lastIndexOf("a"));
		
		//substring: 문자열에 지정한 법우이ㅔ 속하는 문자열을 반환
		//(시작범위 값은 포함 끝나는 범위값 포함x)
		
		String str2 = "ABCDEFG";
		
		String substring = str2.substring(0,2);
		
		System.out.println("substring : " + substring);
	}
}
