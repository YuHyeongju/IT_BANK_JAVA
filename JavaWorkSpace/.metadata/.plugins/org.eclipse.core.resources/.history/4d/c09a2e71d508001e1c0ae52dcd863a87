package operation;

public class Ex01 {
	
	public static void main(String[] args) {
	
		int i,j;
		
		i = +100;// 부호 연산자
		j = -200;
		
		System.out.println(i+j);
		
		//증감 연산자의 독립사용일때 
		int x = 1;
		int y = 1;
		
		System.out.printf("x : %d, y : %d\n\n",x,y);
		
		++x; //1증가 
		y = x;
		System.out.printf("x : %d, y : %d\n\n",x,y);
		
		x--;// 
		y = x;
		System.out.printf("x : %d, y : %d\n\n",x,y);
		
		//증감연산자의 독립사용이 아닐때
		y = ++x;
		//연산과정: x를 1증가 후 y = x를 실행
	}
}
